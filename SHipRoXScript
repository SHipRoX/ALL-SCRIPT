    Name = "SHipRoX Hub | MVSD", 
    HidePremium = false, 
    SaveConfig = true, 
    IntroText = "SHipRoX Hub", 
    ConfigFolder = "SHipRoX_Hub"
})

-- Create the main tab
local MainTab = Window:MakeTab({
    Name = "Main Tab",
    Icon = "rbxassetid://117737275277614",
    PremiumOnly = false
})

-- Notification for welcome message
