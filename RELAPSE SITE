<!-- Boom sound -->
<audio id="boomSound" src="https://www.myinstants.com/media/sounds/vine-boom.mp3" preload="auto"></audio>

<script>
  function startPrank() {
    document.getElementById("popup").style.display = "none";

    const boom = document.getElementById("boomSound");
    boom.volume = 1.0;

    boom.play().then(() => {
      showVideo();
    }).catch(err => {
      console.error("Boom sound failed:", err);
      showVideo();
    });
  }

  function showVideo() {
    const videoPopup = document.getElementById("videoPopup");
    videoPopup.classList.add("active");

    const video = document.getElementById("prankVideo");
    video.src = "https://github.com/SHipRoX/ALL-SCRIPT/raw/refs/heads/main/ssstik.io_@rndmoffcial03_1753604941693.mp4";
    video.volume = 1.0;
    video.muted = false;

    video.play().catch(err => {
      console.log("Autoplay error:", err);
    });

    video.onended = () => {
      document.getElementById("proceedBtn").style.display = "inline-block";
    };
  }

  function startSecondPrank() {
    const boom = document.getElementById("boomSound");
    boom.currentTime = 0;
    boom.play().then(() => {
      setTimeout(() => {
        showSecondVideo();
      }, 500);
    }).catch(() => {
      showSecondVideo();
    });
  }

  function showSecondVideo() {
    document.getElementById("secondVideoPopup").classList.add("active");

    const secondVid = document.getElementById("secondVideo");
    secondVid.src = "https://github.com/SHipRoX/ALL-SCRIPT/raw/refs/heads/main/ssstik.io_@jhynmiar_1753606979276.mp4";
    secondVid.volume = 1.0;
    secondVid.muted = false;

    secondVid.play().catch(err => {
      console.log("Second video error:", err);
    });

    secondVid.onended = () => {
      document.getElementById("finalMessage").style.display = "block";
      document.getElementById("finalBtn").style.display = "inline-block";
    };
  }

  document.getElementById("finalBtn").onclick = () => {
    showThirdVideo();
  };

  function showThirdVideo() {
    const boom = document.getElementById("boomSound");
    boom.currentTime = 0;
    boom.play().catch(() => {});
    
    const thirdPopup = document.getElementById("thirdVideoPopup");
    thirdPopup.classList.add("active");

    const thirdVid = document.getElementById("thirdVideo");
    thirdVid.src = "https://github.com/SHipRoX/ALL-SCRIPT/raw/refs/heads/main/ssstik.io_@zy_mxc_1753609470697.mp4";
    thirdVid.volume = 1.0;
    thirdVid.muted = false;

    thirdVid.play().catch(err => {
      console.error("Third video play failed:", err);
    });

    thirdVid.onended = () => {
      document.getElementById("finalMessagePopup").style.display = "flex";
    };
  }
</script>

